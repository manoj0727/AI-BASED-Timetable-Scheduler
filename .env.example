# ===========================================
# MODERN STACK - Go Backend + Local PostgreSQL
# ===========================================

# ------------------
# Application Settings
# ------------------
APP_ENV=development
APP_PORT=8000
APP_NAME=AI Timetable Scheduler

# Secret key for JWT tokens (generate with: openssl rand -base64 32)
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars

# ------------------
# Database Configuration (Local PostgreSQL)
# ------------------
# For local development
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=timetable_db
DB_SSLMODE=disable

# Full connection string (auto-generated from above, or set manually)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/timetable_db?sslmode=disable

# ------------------
# CORS Settings
# ------------------
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ------------------
# Frontend Configuration
# ------------------
NEXT_PUBLIC_API_URL=http://localhost:8000

# ------------------
# Optimization Engine Settings
# ------------------
# Max time for timetable generation (seconds)
OPTIMIZATION_TIMEOUT=300
# Number of parallel workers (use CPU cores, e.g., 4, 8, 16)
OPTIMIZATION_WORKERS=8
# Algorithm: "hybrid", "genetic", "simulated_annealing", "tabu_search"
OPTIMIZATION_ALGORITHM=hybrid

# ------------------
# File Storage (Local Storage)
# ------------------
STORAGE_PATH=./storage/uploads
STORAGE_BUCKET=timetable-files
MAX_FILE_SIZE_MB=10

# ------------------
# Email Configuration (Optional)
# ------------------
EMAIL_PROVIDER=smtp
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=true
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=noreply@timetable-scheduler.com

# Or use SendGrid:
# EMAIL_PROVIDER=sendgrid
# SENDGRID_API_KEY=your-sendgrid-api-key

# ------------------
# Logging & Monitoring
# ------------------
LOG_LEVEL=info
# Options: debug, info, warn, error

# ------------------
# Rate Limiting
# ------------------
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_DURATION=60

# ------------------
# Session & Cache (Optional)
# ------------------
# SESSION_SECRET=your-session-secret-here
# CACHE_TTL=3600

# ------------------
# Production Only (ignore in development)
# ------------------
# REDIS_URL=redis://localhost:6379/0
# SENTRY_DSN=your-sentry-dsn-for-error-tracking
